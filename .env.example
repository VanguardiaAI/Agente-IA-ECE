# Configuraci√≥n de ejemplo para Eva AI

# WooCommerce API
WOOCOMMERCE_API_URL=https://your-store.com/wp-json/wc/v3
WOOCOMMERCE_CONSUMER_KEY=your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_consumer_secret
WOOCOMMERCE_WEBHOOK_SECRET=your_webhook_secret

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=eva_db
POSTGRES_USER=eva_user
POSTGRES_PASSWORD=your_secure_password
DATABASE_URL=postgresql://eva_user:your_secure_password@localhost:5432/eva_db

# OpenAI API
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=8192

# MCP Server
MCP_HOST=localhost
MCP_PORT=8000

# General Settings
DEBUG=False
ENABLE_CONVERSATION_LOGGING=true
LOG_LEVEL=INFO

# WhatsApp 360Dialog (optional)
WHATSAPP_360DIALOG_API_KEY=your_api_key
WHATSAPP_360DIALOG_API_URL=https://waba-v2.360dialog.io
WHATSAPP_PHONE_NUMBER=your_phone_number
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_verify_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_id

# WhatsApp Templates
WHATSAPP_CART_RECOVERY_TEMPLATE=cart_recovery_template
WHATSAPP_ORDER_CONFIRMATION_TEMPLATE=order_confirmation
WHATSAPP_WELCOME_TEMPLATE=welcome_message