# === CONFIGURACIÓN DEL AGENTE DE ATENCIÓN AL CLIENTE ===

# === LLM CONFIGURATION ===
# Proveedor de LLM: "anthropic" o "openai"
LLM_PROVIDER=openai

# Para Anthropic Claude (NO USAR - comentado)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Para OpenAI
OPENAI_API_KEY=your_openai_api_key_here

MODEL_NAME=gpt-4.1

# Parámetros del modelo
TEMPERATURE=0.1
MAX_TOKENS=4000

# === MCP SERVER CONFIGURATION ===
# Configuración del servidor MCP de WooCommerce
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000

# === AGENT BEHAVIOR ===
# Tiempo máximo de conversación en minutos
MAX_CONVERSATION_TIME=30

# Número máximo de turnos por conversación
MAX_TURNS=50

# Habilitar transferencia automática a humanos
ENABLE_HUMAN_HANDOFF=true

# === PERSONALIZACIÓN ===
# Nombre de la tienda (para personalizar respuestas)
STORE_NAME=Tu Tienda Online

# Idioma de respuestas
LANGUAGE=es

# Tono de conversación: formal, casual, amigable
CONVERSATION_TONE=amigable

# === LOGGING CONFIGURATION ===
# Nivel de logging: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
LOG_CONVERSATIONS=true

# === CONFIGURACIÓN OPCIONAL ===
# LangSmith para monitoreo (opcional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=CustomerServiceAgent

# Configuración de timeouts
REQUEST_TIMEOUT=30
MCP_CONNECTION_TIMEOUT=10

# === CONFIGURACIÓN FASE 2 - BÚSQUEDA HÍBRIDA ===
# Base de datos PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/knowledge_base

# OpenAI para embeddings
OPENAI_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=8192

# WooCommerce API - REQUERIDO PARA FASE 2
WOOCOMMERCE_API_URL=https://your-store.com/wp-json/wc/v3
WOOCOMMERCE_CONSUMER_KEY=your_consumer_key_here
WOOCOMMERCE_CONSUMER_SECRET=your_consumer_secret_here

# Webhook Secret (opcional pero recomendado)
WOOCOMMERCE_WEBHOOK_SECRET=your_webhook_secret_here

# Configuración general
DEBUG=False
ENABLE_CONVERSATION_LOGGING=true 